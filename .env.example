# Football Home Environment Configuration
# Copy this file to .env and customize for your environment

# ================================
# DATABASE CONFIGURATION
# ================================
POSTGRES_DB=footballhome
POSTGRES_USER=footballhome_user
POSTGRES_PASSWORD=footballhome_pass_change_in_production
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ================================
# BACKEND API CONFIGURATION
# ================================
# JWT Secret - MUST be changed in production
JWT_SECRET=football-home-super-secret-jwt-key-change-in-production

# Node environment
NODE_ENV=production

# Backend port
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://footballhome.org:3000

# ================================
# FRONTEND CONFIGURATION
# ================================
# API endpoint for frontend
REACT_APP_API_URL=http://footballhome.org:3001/api

# Application name
REACT_APP_APP_NAME=Football Home

# Disable source maps in production
GENERATE_SOURCEMAP=false

# ================================
# PGADMIN CONFIGURATION
# ================================
PGADMIN_DEFAULT_EMAIL=admin@footballhome.org
PGADMIN_DEFAULT_PASSWORD=admin123_change_in_production

# ================================
# SSL CONFIGURATION (Optional)
# ================================
# Path to SSL certificate files
SSL_CERT_PATH=./ssl/footballhome.org.crt
SSL_KEY_PATH=./ssl/footballhome.org.key

# ================================
# EXTERNAL INTEGRATIONS (Future)
# ================================
# Google Maps API (for venue geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@footballhome.org
SMTP_PASS=your_app_password

# ================================
# DEVELOPMENT OVERRIDES
# ================================
# Uncomment these for local development

# Use localhost for local development
# REACT_APP_API_URL=http://localhost:3001/api
# FRONTEND_URL=http://localhost:3000

# Development database (if using separate dev DB)
# POSTGRES_HOST=localhost
# POSTGRES_DB=footballhome_dev

# Application Configuration
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# API Configuration  
API_PORT=3001
CORS_ORIGIN=http://localhost:3001